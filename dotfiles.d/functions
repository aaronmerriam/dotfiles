#!/bin/zsh
#-------------------------------------------------------
#   Overview
#-------------------------------------------------------
#   This file sources functions in the autoload folder
#   regardless of OS.  Right now, only autoloading of
#   shell functions is accepted.

#--------------------------------------------------
#    Generic shell functions to autoload
#--------------------------------------------------
for function in ${dotfile_dir}/dotfiles.d/functions.d/autoload/*; do
  if [[ "$function" =~ .+\.sh$ ]]; then
    source $function
  else 
    if [ -d $function ]; then
      continue
    else
      echo "Not autoloading ${function} (only .sh allowed)"
    fi
  fi
done

#--------------------------------------------------
#    OS-specific shell functions to autoload
#--------------------------------------------------
if [ -d "${dotfile_dir}/dotfiles.d/functions.d/${os}" ]; then
  for function in ${dotfile_dir}/dotfiles.d/functions.d/autoload/${os}/*; do
    if [[ "$function" =~ .+\.sh$ ]]; then
      source $function
    else 
      if [ -d $function ]; then
        continue
      else
        echo "Not autoloading ${function} (only .sh allowed)"
      fi
    fi
  done
fi
